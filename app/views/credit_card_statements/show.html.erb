<p id="notice"><%= notice %></p>

<p><strong>From:</strong> <%= @credit_card_statement.start %></p>

<p><strong>To:</strong> <%= @credit_card_statement.end %></p>

<p><strong>Spent:</strong> <%= number_to_currency(@credit_card_statement.spent) %></p>

<%= render 'transactions/transactions', transactions: @credit_card_statement.transactions %>

<details>
<summary>Raw content</summary>
<textarea readonly cols="50" rows="20">
  <%= @credit_card_statement.content %>
</textarea>
</details>

